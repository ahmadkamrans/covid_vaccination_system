<div class="alert alert-success" role="alert">
	<h3>Hello! Admin Have a Good Day!</h3>
	<h5>Today is <%="#{Date.today.strftime("%d %B %y")}"%></h5>
</div>
<div class="alert alert-light" role="alert">
	<div class="row">
		<%= link_to 'Vaccines', admin_vaccines_path, class: 'btn btn-primary' %>
	</div>
	<div class="row pt-5">
		<%= link_to 'Vaccination Centers', admin_vaccination_centers_path, class: 'btn btn-primary' %>
	</div>

	<div class="row pt-5">
		<%= link_to 'Allocate Vaccines', admin_allocated_vaccs_path, class: 'btn btn-primary' %>
	</div>
</div>

<div class="alert alert-warning mt-5" role="alert">
<div class="row">
	<h2>Pie Chart For Vaccination Registrations</h2>
	<%= pie_chart({"Applied For Vaccination" => @applied_vac, "Not Applied For Vaccination" => @non_applied_vac}) %>
</div>
<div class="row">
	<h2>Pie Chart For Vaccination Drive</h2>
	<%= pie_chart({"Got Vaccinated" => @vaccinated, "Applicants Left With Vaccination" => @applied_vac - @vaccinated}) %>
</div>
</div>
<div class="row">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @all_users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', show_user_path(user: user.id), class: 'btn btn-info btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>